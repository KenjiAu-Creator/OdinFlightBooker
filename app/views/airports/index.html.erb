<p id="notice"><%= notice %></p>
<div class="airport-nav">
  <h1>Airports</h1>
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @airports.each do |airport| %>
        <tr>
          <td><%= airport.code %></td>
          <td><%= link_to 'Show', airport %></td>
          <td><%= link_to 'Edit', edit_airport_path(airport) %></td>
          <td><%= link_to 'Destroy', airport, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table><br>

  <%= link_to 'New Airport', new_airport_path %>
</div>

<div class="flightPlanner">
  <div class="flightAirports">
    <h3>From:</h3>
    <%= select_tag(:airport_id, options_for_select(@airportOptions)) %>
  </div>
  <div class="flightAirports">
    <h3>To:</h3>
    <%= select_tag(:airport_id, options_for_select(@airportOptions)) %>
  </div>
</div>